		<script language="javascript">
				var currentPressReleaseNum = '1';

				//javascript for showing/hiding press releases
				function accessPressRelease(release_num){
					var currentPressReleaseButton = document.getElementById("press_release_selector_"+currentPressReleaseNum);
					var currentPressReleaseHeadline = document.getElementById("press_release_headline_"+currentPressReleaseNum);
					var currentPressReleaseDisplay  = document.getElementById("press_release_display_"+currentPressReleaseNum);
					var pressReleaseButton = document.getElementById("press_release_selector_"+release_num);
					var pressReleaseHeadline = document.getElementById("press_release_headline_"+release_num);
					var pressReleaseDisplay  = document.getElementById("press_release_display_"+release_num);

					currentPressReleaseButton.className = "notSelectedRelease";
					currentPressReleaseHeadline.style['display'] = "none";
					currentPressReleaseDisplay.style['display'] = "none";

					pressReleaseButton.className = "selectedRelease";
					pressReleaseHeadline.style['display'] = "";
					pressReleaseDisplay.style['display'] = "";

					currentPressReleaseNum = release_num;

				}
		</script>

